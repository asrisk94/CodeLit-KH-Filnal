	<resultMap id="paymentMap" type="payment">
		<id column="pay_code" property="payCode"/>
		<result column="ref_member_id" property="refMemberId"/>
		<result column="pay_no" property="payNo"/>
		<result column="pay_cost" property="payCost"/>
