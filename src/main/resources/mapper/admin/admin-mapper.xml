	<update id="approveLecture">
		update
	    	lecture
		set 
	     	lecture_accept_yn ='Y'
		where lecture_no = #{no}
	</update>
	
	<delete id="deleteTeacher">
		delete from
			teacher
		where
			ref_member_id = #{id}
	</delete>
	
	<update id="deleteLecture">
		update 
			lecture
		set 
	     	lecture_accept_yn ='N'
		where 
			lecture_no = #{no}
	</update>

